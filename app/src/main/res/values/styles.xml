<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- BackgroundColor -->
    <color name="background_app">#FFFFFF</color>
    <color name="background_button">#fe7a65</color>
    <color name="background_action_bar">#fe7a65</color>
    <color name="textButton">#FFFFFF</color>
    <color name="textTime">#00cbcf</color>
    <color name="list_preguntas">#b0b0b0</color>
    <color name="disabled">#ff7e3212</color>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--Background App-->
        <item name="android:windowBackground">@color/background_app</item>
        <item name="android:colorBackground">@color/background_app</item>
        <!--Button-->
        <item name="colorButtonNormal">@color/background_button</item>
        <!-- Action Bar-->
        <item name="colorPrimary">@color/background_action_bar</item>
    </style>


    <!--MainActivity style-->
    <style name="CustomThemeMA" parent="Theme.AppCompat.Light">
        <!--ActionBar-->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!--Background App-->
        <item name="android:windowBackground">@color/background_app</item>
        <item name="android:colorBackground">@color/background_app</item>
        <!--Button-->
        <item name="colorButtonNormal">@color/background_button</item>
    </style>

    <style name="CustomButton">
        <item name="android:textColor">@drawable/text_color</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="CustomButtonResultados">
        <item name="android:textColor">@color/textButton</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>




</resources>

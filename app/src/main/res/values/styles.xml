<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- BackgroundColor -->
    <color name="background_app">#FFFFFF</color>
    <color name="background_button">#FF5722</color>
    <color name="background_action_bar">#FF5722</color>
    <color name="background__start_button">#FF5722</color>
    <color name="background__end_button">#F4511E</color>
    <color name="textButton">#FFFFFF</color>
    <color name="color_white">#FFFFFF</color>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!--Background App-->
        <item name="android:windowBackground">@color/background_app</item>
        <item name="android:colorBackground">@color/background_app</item>
        <!--Button-->
        <item name="colorButtonNormal">@color/background_button</item>
    </style>

    
    <!--MainActivity style-->
    <style name="CustomThemeMA" parent="Theme.AppCompat.Light">
        <!--ActionBar-->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!--Background App-->
        <item name="android:windowBackground">@color/background_app</item>
        <item name="android:colorBackground">@color/background_app</item>
        <!--Button-->
        <item name="colorButtonNormal">@color/background_button </item>

    </style>

    <style name="CustomButton">
        <item name="android:textColor">@color/textButton</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:drawablePadding">8dp</item>

    </style>

    <style name="CustomButtonPlay">

        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="PreuVirtualTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/PreuVirtualActionBar</item>
    </style>

    <style name="PreuVirtualActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#FF5722</item>
    </style>

</resources>

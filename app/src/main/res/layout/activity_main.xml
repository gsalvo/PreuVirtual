<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="PreuVirtual"
            android:textSize="50dp"
            android:textColor="#1E88E5"
            android:textStyle="bold"
            android:typeface="sans"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Survival Edition"
            />
        <Button
            android:id="@+id/btnTimeAttack"
            style="@style/CustomButton"
            android:text="Time Attack"
            android:drawableLeft="@drawable/ic_alarm_white_24dp"
            android:onClick="goTimeAttack" />
        <Button
            android:id="@+id/btnGoals"
            style="@style/CustomButton"
            android:text="Goals"
            android:drawableLeft="@drawable/ic_goal_24dp"
            android:enabled="false" />
        <Button
            android:id="@+id/btnEndlees"
            style="@style/CustomButton"
            android:text="Endless"
            android:drawableLeft="@drawable/ic_endless_24dp"
            android:enabled="false" />

    </LinearLayout>


</RelativeLayout>

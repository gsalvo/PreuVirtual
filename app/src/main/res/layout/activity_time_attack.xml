<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.novus.preuvirtual.TimeAttack">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <Button
            android:id="@+id/btnMatematicas"
            android:layout_marginTop="5dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Matemáticas"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/abc_btn_switch_to_on_mtrl_00012"
            android:onClick="goTiempo"
            />
        <Button
            android:id="@+id/btnLenguaje"
            android:layout_marginTop="5dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Lenguaje"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/abc_ic_menu_cut_mtrl_alpha"
            android:enabled="false"/>
        <Button
            android:id="@+id/btnHistoria"
            android:layout_marginTop="5dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Historia"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/abc_ic_voice_search_api_mtrl_alpha"
            android:enabled="false"/>
        <Button
            android:id="@+id/btnCiencias"
            android:layout_marginTop="5dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Ciencias"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/abc_ic_voice_search_api_mtrl_alpha"
            android:enabled="false"/>
        <Button
            android:id="@+id/btnBiologia"
            android:layout_marginTop="5dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Biología"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/abc_ic_voice_search_api_mtrl_alpha"
            android:enabled="false"/>
        <Button
            android:id="@+id/btnQuimica"
            android:layout_marginTop="5dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Química"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/abc_ic_voice_search_api_mtrl_alpha"
            android:enabled="false"/>
        <Button
            android:id="@+id/btnFisica"
            android:layout_marginTop="5dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Física"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/abc_ic_voice_search_api_mtrl_alpha"
            android:enabled="false"/>

    </LinearLayout>

</RelativeLayout>
